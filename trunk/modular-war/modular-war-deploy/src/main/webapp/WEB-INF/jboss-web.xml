<!DOCTYPE jboss-web PUBLIC
    "-//JBoss//DTD Web Application 4.2//EN"
    "http://www.jboss.org/j2ee/dtd/jboss-web_4_2.dtd">
<jboss-web>
	<!-- Isolation with Overriding Server Classes (http://www.jboss.org/community/wiki/classloadingconfiguration) -->
	<class-loading java2ClassLoadingCompliance="false">
		<loader-repository>
			com.acme:archive=modular-war.war
			<loader-repository-config>java2ParentDelegation=false</loader-repository-config>
		</loader-repository>
	</class-loading>

	<context-root>modular-war</context-root>

</jboss-web>
